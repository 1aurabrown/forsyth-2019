<div class="cart">
  {% if cart.item_count > 0 %}
    <form class="cart__form" action="/cart" method="post" novalidate>
      <table class="cart__table">
        <tbody>

          {% for item in cart.items %}

          {% comment %}

          Cart Item Template
          =====================
          The data-label attributes on <td> elements are mobile-friendly
          helpers used for responsive-table labels
          {% endcomment %}

            <tr class="responsive-table-row cart__table__row">

              <td class="cart__table__row__image" data-label="{{ 'customer.order.product' | t }}">

                {% if item.image != blank %}
                  <a href="{{ item.url | within: collections.all }}">
                    {{ item | img_url: '240x240' | img_tag: item.title }}
                  </a>
                {% endif %}

              </td>
              <td class="cart__table__row__text">
                <table class="cart__table__row__text__table"><tbody><tr>
                  <td>
                    <p class="cart__table__row__text__vendor"><span class="faux-underline">{% include 'vendor-link', product: item.product %}</span></p>

                    <p class="cart__table__row__text__title"><a href="{{ item.url }}">{{ item.product.title }}</a></p>
                    {% unless item.product.has_only_default_variant %}
                      <p>{{ item.variant.title }}</p>
                    {% endunless %}

                    <p class="cart__table__row__text__unit-price small--hide">
                      {% if item.original_line_price != item.line_price %}
                        <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
                        <s>{{ item.original_price | money_without_trailing_zeros }}</s>&nbsp;
                        <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
                        {{ item.price | money_without_trailing_zeros }} ea.
                      {% else %}
                        {{ item.price | money_without_trailing_zeros }} ea.
                      {% endif %}
                    </p>

                  </td>
                  <td>

                  </td>

                  <td data-label="{{ 'cart.label.quantity' | t }}">
                    <a href="/cart/change?line={{ forloop.index }}&amp;quantity={{ item.quantity | minus: 1 }}" >
                      -
                    </a>
                    <span>{{ item.quantity }}</span>

                    <a href="/cart/change?line={{ forloop.index }}&amp;quantity={{ item.quantity | plus: 1 }}" >
                      +
                    </a>
                  </td>
                </tr></tbody></table>

              </td>

              <td class="cart__table__row__price" data-label="{{ 'cart.label.total' | t }}">
                {{ item.line_price | money_without_trailing_zeros }}
              </td>
              <td class="cart__table__row__close">
                <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" >
                  {% include 'close.svg' %}
                </a>
              </td>
            </tr>

          {% endfor %}
        </tbody>
      </table>

      {% if settings.cart_notes_enable %}
        <label for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
        <textarea name="note" id="CartSpecialInstructions">{{ cart.note }}</textarea>
      {% endif %}

      <p>{{ 'cart.general.subtotal' | t }}</p>
      <p>{{ cart.total_price | money_without_trailing_zeros }}</p>
      {% if cart.total_discounts > 0 %}
        <p>{{ 'cart.general.savings' | t }} {{ cart.total_discounts | money_without_trailing_zeros }}</p>
      {% endif %}
      <p>{{ 'cart.general.shipping_at_checkout' | t }}</p>
      <input type="submit" name="update" value="{{ 'cart.general.update' | t }}">
      <input type="submit" name="checkout" class="button" value="{{ 'cart.general.checkout' | t }}">
    </form>
  {% else %}
    <h1 class="cart__header">
      {{ 'cart.general.empty' | t }}
    </h1>
    {% comment %}
    Cart empty state
    {% endcomment %}
    <div class="supports-cookies">
      <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
    </div>

    {% comment %}
    Cart no cookies state
    ---------------------
    Browser cookies are required to use the cart. If cookies aren't enabled in the
    browser a message is displayed prompting the user to enable them.
    {% endcomment %}
    <div class="supports-no-cookies">
      <p>{{ 'cart.general.cookies_required' | t }}</p>
    </div>
  {% endif %}
</div>
