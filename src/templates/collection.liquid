<section class="collection">
  <header role="banner" class="collection__header">
    <h1 class="collection__header__title large-up--hide sans-serif-uppercase-l">{{ collection.title }}</h1>
    {% if collection.image != blank %}
      <div class="collection__header__image">
        {% include 'responsive-image' with
          image: collection.image,
          max_width: 700,
          max_height: 800
        %}
      </div>
    {% endif %}
    
    {% if collection.description != blank %}
      <div 
        class="collection__header__description small--serif-body medium--serif-body-l large-up--serif-body-xl"
      >
        {{ collection.description }}
      </div>
    {% endif %}
  </header>

  {% paginate collection.products by 12 %}
    <div class="collection__content grid">
      {% for product in collection.products %}
        <div class="collection__content__product grid__item medium-up--one-third small--one-half">
          {% if product.featured_image != blank %}
            <a href="{{ product.url | within: collection }}">
              {% include 'responsive-image' with
                image: product.featured_image,
                max_width: 700,
                max_height: 560,
                aspect_ratio: 1.25,
                image_class: "collection__content__product__image"
              %}
            </a>
          {% endif %}

          <div class="collection__content__product__metadata">
            {% if product.vendor != blank %}
              <u class="collection__content__product__metadata__vendor">
                {{ product.vendor | link_to_vendor }}
              </u>
            {% endif %}
            <p>
              <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
            </p>

            <p>
              {% if product.available %}
              {% comment %} On sale {% endcomment %}
                {% if product.compare_at_price > product.price %}
                  <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                  <s class="collection__content__product__metadata__strikethrough_price">
                    {{ product.compare_at_price | money_without_trailing_zeros }}
                  </s>
                  &nbsp;
                  {% if product.price_varies %}
                    {%- assign sale_price = product.price | money -%}
                    {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
                  {% else %}
                    {{ product.price | money_without_trailing_zeros }}
                  {% endif %}

                {% else %}
                {% comment %} Available; not on sale {% endcomment %}
                  {% if product.price_varies %}
                    {%- assign price = product.price | money -%}
                    {{ 'products.product.from_text_html' | t: price: price }}
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                {% endif %}

              {% else %}
              {% comment %} Sold {% endcomment %}
                <s class="collection__content__product__metadata__strikethrough_price">
                  {{ product.price | money_without_trailing_zeros }}
                </s>
                &nbsp;
                <i>{{ 'products.product.sold_out' | t }}</i>
              {% endif %}
            </p>
          </div>
        </div>

      {% else %}
          <p>{{ 'collections.general.no_matches' | t }}</p>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      {% include 'pagination' %}
    {% endif %}
  {% endpaginate %}
</section>
