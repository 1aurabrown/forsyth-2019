<section data-section-id="{{ section.id }}" data-section-type="more-articles" class="max-width more-articles">

<div class="more-articles__carousel blog-grid">
  <div class="grid">
    {% for article in blog.articles %}
      <div class="grid__item more-articles__carousel__card widescreen--one-quarter medium--one-half small--one-whole">
        {% include 'blog-article-card' %}
      </div>
    {% endfor %}
  </div>
</div>
</section>
{% schema %}
  {
    "name": "Instagram feed",
    "class": "homepage-section",
    "settings": [
      {
        "type": "paragraph",
        "content": "To configure the header and the connection to Instagram, use the Instafeed app."
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "@FORSYTHART | SEE MORE"
      },
      {
        "type": "select",
        "id": "color",
        "label": "Arrow color",
        "default": "black",
        "options": [
          {
            "value": "black",
            "label": "Black"
          },
          {
            "value": "white",
            "label": "White"
          }
        ]
      }
    ]
  }
{% endschema %}