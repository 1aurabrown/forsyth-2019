{{ 'newsletter.css' | asset_url | stylesheet_tag }}
<script type="text/javascript" src="{{ 'newsletter.js' | asset_url }}" defer="defer"></script>


<newsletter-form class="newsletter {{ class }}">
  <script type="application/json" data-newsletter-json>
    {
      "placeholder": {{ placeholder | json }},
      "success": {{ success | json }},
      "error": {{ error | json }}
    }
  </script>
  {% if settings.embed.size > 0 %}
  {{ settings.embed }}
  {% else %}
    <p>Mailchimp is not configured. Please visit Theme settings.</p>
  {% endif %}
  <button class="hide newsletter__button" type="submit">{% render 'forward-arrow.svg' %}</button>
  <div class="newsletter__feedback {{ class }}__feedback">
    <small class="newsletter__feedback__success {{ class }}__feedback__success hide">

    </small>
    <small class="newsletter__feedback__error {{ class }}__feedback__error hide">

    </small>
  </div>
</newsletter-form>